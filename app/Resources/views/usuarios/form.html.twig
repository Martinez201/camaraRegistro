{% extends 'navegacion.html.twig' %}

{% block content %}

<h1 class="text-center text-danger">
    {% if usuarios.id %}
        Usuario {{ usuarios.id }}
    {% else %}
        Alta Usuario
    {% endif %}
</h1>

{{ form_start(form) }}

    {{ form_widget(form) }}
<p class="mt-5">
    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
    {% if not usuarios.id %}
        <button type="reset" class="btn btn-warning"><i class="fa fa-broom"></i> Limpiar</button>
    {% else %}
        <a href="{{ path('usuario_eliminar',{'id': usuarios.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i> Borrar</a>
    {% endif %}
    <a href="{{ path('usuarios_listar') }}" class="btn btn-info"><i class="fa fa-arrow-alt-circle-left"></i> Volver al listado</a>
</p>
{{ form_end(form) }}

{% endblock %}