{% extends 'navegacion.html.twig' %}

{% block title %}

    Eliminar  Usuario

{% endblock %}

{% block content %}

    <h1>Eliminar Usuario</h1>

    <div class="alert alert-warning">
        ¿Esta seguro de que quiere eliminar el usuario {{ usuarios.id }}?  Esta operación no se puede deshacer.
    </div>

    <form method="post">
        <a href="{{ path('usuario_form',{'id': usuarios.id}) }}" class="btn btn-info">Volver atrás</a>
        <button type="submit" class="btn btn-danger">Borrar</button>
    </form>
{% endblock %}

