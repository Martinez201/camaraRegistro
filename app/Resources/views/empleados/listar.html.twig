{% extends 'navegacion.html.twig' %}

{% block title %}

    Empleados Listar

{% endblock %}



{% block content %}
        <h1 class="text-center text-danger">Listado de Empleados</h1>

        <a href="{{ path('empleados_altas') }}" class="btn btn-success"><i class="fa fa-plus-circle"></i> AÃ±adir Empleado</a>

        <table class="table table-bordered table-striped text-center mb-5 mt-5">
            <thead class="bg-danger text-light">
            <tr>
                <td>Nombre</td>
                <td>Apellidos</td>
                <td>D.N.I</td>
                <td>Email</td>
            </tr>
            </thead>
            <tbody>
            {% for empleado in empleados %}
                <tr>
                    <td><a href="{{ path('empleados_form',{'id': empleado.id}) }}">{{ empleado.nombre }}</a></td>
                    <td>{{ empleado.apellidos}}</td>
                    <td>{{ empleado.dni}}</td>
                    <td>{{ empleado.email}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

{% endblock %}

